<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.application.foodhub.postLike.PostLikeDAO">

	<!-- [ set ] 사용예시 --> 
	<update id="togglePostLike" parameterType="PostLikeDTO">
		UPDATE	POST_LIKE
		<set>
				<if test="price != 0">
					PRICE = PRICE + #{price},
				</if>
				<if test="deliveryPrice != 0">
					DELIVERY_PRICE = DELIVERY_PRICE + #{deliveryPrice}
				</if>
		</set>		
		WHERE PRODUCT_ID = 1
	</update>
	
</mapper>